<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_home"></include>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_navigation_height"
        android:background="@color/home_nav_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/navigation_carpool"
            style="@style/home_nav_item_style"
            android:drawableTop="@drawable/home_temp"
            android:text="拼车" />

        <TextView
            android:id="@+id/navigation_node"
            style="@style/home_nav_item_style"
            android:drawableTop="@drawable/home_node"
            android:text="记事"/>

        <TextView
            android:id="@+id/navigation_mine"
            style="@style/home_nav_item_style"
            android:drawableTop="@drawable/home_temp"
            android:text="我" />
    </LinearLayout>
</LinearLayout>
